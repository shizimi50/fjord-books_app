
<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong><%= Report.human_attribute_name(:title) %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:description) %>:</strong>
  <%= @report.description %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:created_by) %>:</strong>
  <% if @report.user.name.present? %>
    <td><%= @report.user.name %></td>
  <% else %>
    <td><%= @report.user.email %></td>
  <% end %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:created_at) %>:</strong>
  <%= l @report.created_at %>
</p>

<br>

<%= render template: 'comments/show' %>
<%= render 'comments/form', commentable: @report, comment: @comment %>
<% if @report.user == current_user %>
  <%= link_to t('views.common.edit'), edit_report_path(@report) %> |
<% end %>
<%= link_to t('views.common.back'), reports_path %>
